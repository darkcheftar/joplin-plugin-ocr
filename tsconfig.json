{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "commonjs",
    "target": "es2015",
    "jsx": "react",
    "esModuleInterop": true,
    "lib": ["DOM", "ESNext", "DOM.Iterable"],
    "paths": {
      "domain/*": ["src/domain/*"],
      "driver/*": ["src/driver/*"]
    },
    "allowJs": true,
    "baseUrl": ".",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true
  }
}
